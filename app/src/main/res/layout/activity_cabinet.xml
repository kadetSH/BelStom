<!--    app:itemIconTint="@color/white"-->
<!--    app:itemTextColor="@color/text_menu"-->

<!--    app:itemBackground="@color/menu_color2"-->
<!--    app:itemIconTint="@color/navigation_view_selector"-->
</androidx.drawerlayout.widget.DrawerLayout>