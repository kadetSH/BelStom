<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:orientation="horizontal">-->

<!--            -->

<!--        </LinearLayout>-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/fragment_list_department_label_orthopedic"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:backgroundTint="@color/btn_color2"
                android:drawableTop="@drawable/orto_2"
                android:drawableTint="@color/white"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="2"
                android:text="@string/fragment_list_department_label_orthopedic"
                android:textAllCaps="false"
                android:textSize="13sp"
                app:cornerRadius="25dp"
                android:layout_gravity="top|left"
                android:paddingTop="10dp"
                android:fontFamily="@font/sf_pro_text_light"
                />

            <Button
                android:id="@+id/fragment_list_department_label_LOR"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/btn_color2"
                android:drawableTop="@drawable/lor_2"
                android:drawableTint="@color/white"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="2"
                android:text="@string/fragment_list_department_label_LOR"
                android:textAllCaps="false"
                android:textSize="13sp"
                app:cornerRadius="25dp"
                android:layout_gravity="top|right"
                android:paddingTop="16dp"
                android:fontFamily="@font/sf_pro_text_light"
                />

        </FrameLayout>

