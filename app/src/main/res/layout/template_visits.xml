<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@android:drawable/editbox_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/dentist_chair"

                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <!--                    -->
                    <TextView
                        android:id="@+id/template_visits_edit_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/fragment_template_visits_edit_title"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="2"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/template_visits_edit_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="@string/fragment_template_visits_edit_date"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/template_visits_label_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/fragment_template_visits_label_doctor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/template_visits_edit_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/fragment_template_visits_edit_doctor"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>




</androidx.cardview.widget.CardView>