<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/dsc_3663" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/fragment_feedback_title"
                android:textColor="@color/background_news"
                android:textSize="14sp" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/fr_feedback_btn_vk"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:srcCompat="@drawable/vk_60"

                    />

                <ImageView
                    android:id="@+id/fr_feedback_btn_instagram"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:srcCompat="@drawable/instagram_60"
                    android:layout_marginStart="50dp"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/btn_color"
                    app:cardCornerRadius="25dp">

                    <ImageButton
                        android:id="@+id/fr_feedback_btn_www"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/roundedbutton"
                        android:backgroundTint="@color/btn_color"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:src="@drawable/domen_50" />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fr_feedback_www_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_feedback_www_label"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fr_feedback_www_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_feedback_www_edit" />

                </LinearLayout>


            </LinearLayout>


            <!--            ///2-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:background="@color/delimiter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/btn_color"
                    app:cardCornerRadius="25dp">

                    <ImageButton
                        android:id="@+id/fr_feedback_btn_telephone_reg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/roundedbutton"
                        android:backgroundTint="@color/btn_color"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:src="@drawable/telephone_48" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fr_feedback_telephone_reg_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_feedback_telephone_reg_label"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fr_feedback_telephone_reg_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_feedback_telephone_reg_edit" />

                </LinearLayout>
            </LinearLayout>


            <!--            ///3-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:background="@color/delimiter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/btn_color"
                    app:cardCornerRadius="25dp">

                    <ImageButton
                        android:id="@+id/fr_feedback_btn_email"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/roundedbutton"
                        android:backgroundTint="@color/btn_color"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:src="@drawable/email_64" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fr_feedback_email_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_feedback_email_label"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fr_feedback_email_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_feedback_email_edit" />

                </LinearLayout>
            </LinearLayout>

            <!--            4-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:background="@color/delimiter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/btn_color"
                    app:cardCornerRadius="25dp">

                    <ImageButton
                        android:id="@+id/fr_feedback_btn_geolocation"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/roundedbutton"
                        android:backgroundTint="@color/btn_color"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:src="@drawable/geolocation_48" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fr_feedback_geolocation_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_feedback_geolocation_label"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fr_feedback_geolocation_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_feedback_geolocation_edit" />

                </LinearLayout>
            </LinearLayout>

            <!--            5-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:background="@color/delimiter" />


        </LinearLayout>


    </ScrollView>


</RelativeLayout>