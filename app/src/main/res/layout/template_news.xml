<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@android:drawable/editbox_background"
    >

    <LinearLayout
        android:id="@+id/fr_template_news_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fr_template_news_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/schedule_black_20"
                android:hint="@string/fragment_template_edit_date"
                android:textColor="@color/text_profile"
                android:textSize="14dp"
                android:layout_weight="1"
                android:fontFamily="@font/sf_pro_text_light"
                />

            <Button
                android:id="@+id/fr_template_news_btn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="10sp"
                style="@style/Theme.Design.Light"
                android:backgroundTint="@color/btn_color"
                android:text="@string/fragment_template_btn"
                android:fontFamily="@font/sf_pro_text_light"
                />


        </LinearLayout>



        <TextView
            android:id="@+id/fr_template_news_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="@string/fragment_template_hint_date"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:inputType="textCapSentences|textMultiLine"
            android:fontFamily="@font/sf_pro_text_light"/>

        <TextView
            android:id="@+id/fr_template_news_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_profile"
            android:ellipsize="end"
            android:maxLines="3"
            android:fontFamily="@font/sf_pro_text_light"
            />


    </LinearLayout>

</RelativeLayout>