<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="4dp"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/id_parent_period_days_edit_fio"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:hint="@string/template_parent_period_days_fio"
                android:textColor="@color/black"
                android:fontFamily="@font/sf_pro_text_light"
                />

            <TextView
                android:id="@+id/id_parent_period_days_edit_profession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:hint="@string/template_parent_period_days_profession"
                android:textSize="12sp"
                android:fontFamily="@font/sf_pro_text_light"
                />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_parent_period_days_rv_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            tools:listitem="@layout/template_child_period_days"
            tools:itemCount="1"
            android:layout_gravity="center_vertical"
            />


    </LinearLayout>


</androidx.cardview.widget.CardView>