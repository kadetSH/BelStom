<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:drawable/editbox_background"
    android:layout_margin="2dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/id_oh_edit_day_RC00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/template_child_period_days_day" />

        <TextView
            android:id="@+id/id_oh_edit_date_RC00"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/btn_color"
            android:textStyle="bold"
            android:hint="@string/template_child_period_days_date" />

        <TextView
            android:id="@+id/id_oh_edit_reception_RC00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/template_child_period_days_reception" />


    </LinearLayout>

</RelativeLayout>