<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@android:drawable/editbox_background"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        >

        <TextView
            android:id="@+id/template_reception_description_edit_procedure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="2"
            android:textColor="@color/black"
            android:hint="@string/fragment_template_reception_description_edit_procedure"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sf_pro_text_light"
            />

        <TextView
            android:id="@+id/template_reception_description_edit_cavity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="2"
            android:textColor="@color/black"
            android:hint="@string/fragment_template_reception_description_edit_cavity"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sf_pro_text_light"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>