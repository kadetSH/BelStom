<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    Не отображает текст в развернутом тулбаре-->
    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
    </style>
    <!--    -->

    <style name="TitleTextStyle">
        <item name="android:maxLines">2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">false</item>
    </style>

    <!--    Текс в свернутом колпсинг тулбаре-->
    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme">12</style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:activatedBackgroundIndicator">@drawable/navigation_view_selector</item>

    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="background">@color/menu_color2</item>
        <item name="tint">@color/menu_color2</item>
        <item name="android:tint">@color/menu_color2</item>
        <item name="itemTextColor">@color/menu_color2</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/text_yellow</item>
        <item name="android:activatedBackgroundIndicator">@drawable/navigation_view_selector</item>

    </style>


</resources>